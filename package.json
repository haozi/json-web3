{
  "name": "json-web3",
  "version": "1.1.0",
  "description": "BigInt-safe JSON serialization and deserialization for Web3 use cases.",
  "keywords": [
    "json",
    "bigint",
    "arraybuffer",
    "serialization",
    "deserialization",
    "web3"
  ],
  "homepage": "https://github.com/haozi/json-web3#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haozi/json-web3.git"
  },
  "license": "MIT",
  "author": "haozi",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --coverage",
    "lint": "prettier . --write",
    "prepublishOnly": "pnpm run build",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "prettier": "^3.8.0",
    "prettier-plugin-lint-md": "^1.0.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-json": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite-node": "^5.3.0",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=18"
  }
}
